                    Height="170"
                    Width="40"
                    Fill="#FF634B4B"
                    RadiusX="5"
                    RadiusY="5"
                    HorizontalAlignment="Left" />
                <Rectangle
                    Height="170"
                    Width="40"
                    Fill="#FF634B4B"
                    RadiusX="5"
                    RadiusY="5"
                    HorizontalAlignment="Right" />
            </Grid>
            <Ellipse
                HorizontalAlignment="Center"
                Height="85"
                VerticalAlignment="Center"
                Width="85"
                Canvas.Left="42"
                Canvas.Top="42"
                Fill="#FF4F4949"
                Visibility="Collapsed">

