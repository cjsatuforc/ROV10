                Height="170"
                VerticalAlignment="Center"
                PointerPressed="Ellipse_PointerPressed"
                Width="40"
                x:Name="SingleY"
                Fill="#FF634B4B"
                RadiusX="5"
                RadiusY="5"
                HorizontalAlignment="Center"
                Canvas.Left="65"
                Visibility="Collapsed"/>
            <Ellipse
                x:Name="XY"
                HorizontalAlignment="Center"
                Height="170"
                VerticalAlignment="Center"
                Width="170"
                PointerPressed="Ellipse_PointerPressed"
                RenderTransformOrigin="0.5,0.5"
                Fill="#FF634B4B"
                Visibility="Collapsed"/>
