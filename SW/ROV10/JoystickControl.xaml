                    Fill="#99EEEEEE"
                    HorizontalAlignment="Left"
                    Height="15.166"
                    Stretch="Fill"
                    UseLayoutRounding="False"
                    VerticalAlignment="Top"
                    Width="16.667"
                    Canvas.Left="5"
                    Canvas.Top="5" />

                <Canvas.RenderTransform>
                    <TranslateTransform
                        x:Name="knobPosition" />
                </Canvas.RenderTransform>

                <Canvas.Resources>
                    <Storyboard
                        x:Name="centerKnob">
                        <DoubleAnimation
                            Storyboard.TargetName="knobPosition"
                            Storyboard.TargetProperty="X"
                            To="0"
                            Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <BackEase
                                    EasingMode="EaseInOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation
                            Storyboard.TargetName="knobPosition"
                            Storyboard.TargetProperty="Y"
                            To="0"
                            Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <BackEase
                                    EasingMode="EaseInOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                    <Storyboard
                        x:Name="centerKnobX">
                        <DoubleAnimation
                            Storyboard.TargetName="knobPosition"
                            Storyboard.TargetProperty="X"
                            To="0"
                            Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <BackEase
                                    EasingMode="EaseInOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                    <Storyboard
                        x:Name="centerKnobY">
                        <DoubleAnimation
                            Storyboard.TargetName="knobPosition"
                            Storyboard.TargetProperty="Y"
                            To="0"
                            Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <BackEase
                                    EasingMode="EaseInOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </Canvas.Resources>
            </Canvas>
        </Canvas>
    </Grid>

</UserControl>
